{% extends 'base.html.twig' %}

{% block title %}Dépenses{% endblock %}


{% block body %}
    <section class="container px-4">
        <div>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <h1 class="fw-bolder">Bonjour {{ app.user.username }}!!! </h1>
                <h1 class="fw-bolder">Tu as depensé {{ app.user.GetSumAmountMonth() }} € ce mois-ci!!! </h1>
                <a class="btn btn-lg btn-light" href="{{ path('app_logout') }}">Partir</a>
            {% else %}
                <h1 class="fw-bolder">Gérez vos dépenses en quelques clics !</h1>
                <p class="lead">Créer votre famille, vos catégories et rentrez vos dépenses</p>
                <a class="btn btn-lg btn-light" href="{{ path('app_login') }}">Commencer</a>
            {% endif %}
        </div>
    </section>
{% endblock %}