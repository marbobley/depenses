{% extends 'base.html.twig' %}

{% block title %} Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<!-- Header-->
<header class="bg-primary bg-gradient text-white">
    <div class="container px-4 text-center">

        <img src="{{ asset('images/billets.jpeg') }}" alt="Pleins de billets">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <h1 class="fw-bolder">Bonjour {{app.user.username}}!!! </h1>
            <h1 class="fw-bolder">Tu as depensé {{ app.user.GetSumAmountMonth() }} € ce mois-ci!!! </h1>
            <a class="btn btn-lg btn-light" href="{{path('app_logout')}}">Partir</a>
        {% else %}
            <h1 class="fw-bolder">Gérez vos dépenses en quelques clics !</h1>
            <p class="lead">Créer votre famille, vos catégories et rentrez vos dépenses</p>
            <a class="btn btn-lg btn-light" href="{{path('app_login')}}">Commencer</a>
        {% endif %}
    </div>
</header>
<aside data-controller="closeable">
    <div class="flex justify-between mt-11 mb-1">
        <button data-action="closeable#close"> 
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 448 512">
        </button>
    </div>
    <h1>hello</h1>
</aside>
{% endblock %}
