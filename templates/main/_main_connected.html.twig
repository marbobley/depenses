
<header class="bg-primary bg-gradient text-white">
<div class="container container-fluid">
    <div class="row">
        <div class="col">
            <h1 class="fw-bolder">
                Bonjour {{ app.user.username }}!!!
            </h1>
        </div>
        <div class="col ">
        <ul>
            <li>Depense du mois : {{ serviceDepenseUser.UserCurrentMonthDepenses|number_format(2) }} €</il>
            <li>Depense du mois précédent : {{ serviceDepenseUser.UserLastMonthDepenses|number_format(2) }} €</il>
            <li>Depense de l'année : {{ serviceDepenseUser.UserCurrentYearDepenses|number_format(2) }} €</il>
            <li>Depense de l'année précédent : {{ serviceDepenseUser.UserLastYearDepenses|number_format(2) }} €</il>
        </ul>

        </div>
    </div>
    
        <div class="row">
            <div class="col">
                {% if serviceFamily.GetUserFamily %}
                    Famille : {{ serviceFamily.GetUserFamily }}
                    <ul>
                        <li>Depense du mois : {{ serviceDepense.FamilyTotalMonth(app.user, "now"|date("n"),"now"|date("Y"))|number_format(2) }} €</il>
                        <li>Depense du mois précédent : {{ serviceDepense.FamilyTotalMonth(app.user, "now"|date("n")-1,"now"|date("Y"))|number_format(2) }} €</il>
                    </ul>
                {% endif %}
            </div>
        </div>
    
</div>
</header>
