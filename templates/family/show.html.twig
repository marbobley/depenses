{% extends 'base.html.twig' %}

{% block title %}Familles{% endblock %}

{% block body %}
<section class="container px-4">
    <h1>Famille : </h1>

    {% if family is not null %}
        <div class="card mb-1 m-auto">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <h4 class="mb-1">{{ family.name }}</h4>
                    <small class="text-muted">Identifiant : {{ family.id }}</small>
                </div>
            </div>
        </div>
    {% else %}
        <div>categorie non trouvé</div>
    {% endif %}
    <a href="{{ path('app_family_index') }}" class="btn btn-primary">Retour</a>
    <a href="{{ path('app_family_edit', {id: family.id}) }}" class="btn btn-warning">Éditer</a>
    <a href="{{ path('app_family_delete', {id: family.id}) }}" class="btn btn-secondary">Supprimer</a>
</section>
{% endblock %}