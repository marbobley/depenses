
{% extends 'base.html.twig' %}

{% block title %}Liste des users{% endblock %}

{% block body %}
    <section class="container px-4">
        <h1>Liste de users</h1>
        <a href="{{ path('app_user_profil_new') }}" class="btn btn-warning">Add</a>
        <ul class="list-group list-group-flush">
            {% for user in users %}
                <div class="card mb-1">
                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">
                            <a href="{{ path('app_user_profil_show', {id: user.id}) }}" class="stretched-link link-dark">
                                <h4 class="mb-1">{{ user.username }}</h4>
                            </a>
                            <small class="text-muted">Identifiant : {{ user.id }}</small>
                            <small class="text-muted">Total : {{ user.GetSumAmount() }}</small>
                        </div>
                    </div>
                </div>
            {% else %}
                <li>Aucun enregistrement en base de donn√©es.</li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}