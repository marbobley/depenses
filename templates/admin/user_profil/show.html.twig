{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<section class="container px-4">
    <h1>User : </h1>

    {% if user is not null %}
        <div class="card mb-1 m-auto">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <h4 class="mb-1">{{ user.username }}</h4>
                    <small class="text-muted">Identifiant : {{ user.id }}</small>
                    <small class="text-muted">Depense : {{ user.GetSumAmount() }}</small>
                </div>
            </div>
        </div>
    {% else %}
        <div>categorie non trouvé</div>
    {% endif %}
    <a href="{{ path('app_user_profil_index') }}" class="btn btn-primary">Retour</a>
    <a href="{{ path('app_user_profil_edit', {id: user.id}) }}" class="btn btn-warning">Éditer</a>
    <a href="{{ path('app_user_profil_delete', {id: user.id}) }}" class="btn btn-secondary">Supprimer</a>
</section>
{% endblock %}