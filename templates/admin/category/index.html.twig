{% extends 'base.html.twig' %}

{% block title %}Liste de categories{% endblock %}

{% block body %}
    <section class="container px-4">
        <h1>Liste de categories</h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-warning">Add</a>
        <ul class="list-group list-group-flush">
            {% for category in categories %}
                <div class="card mb-1">
                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">
                            <a href="{{ path('app_category_show', {id: category.id}) }}" class="stretched-link link-dark">
                                <h4 class="mb-1">{{ category.name }}</h4>
                            </a>
                            <small class="text-muted">Identifiant : {{ category.id }}</small>
                            <small class="text-muted">Depense total : {{ category.sumAmount }}</small>
                            <small class="text-muted">Depense total : {{ category.sumAmountMonth }}</small>
                        </div>
                    </div>
                </div>
            {% else %}
                <li>Aucun enregistrement en base de donn√©es.</li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}